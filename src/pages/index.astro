---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		 ---
const items = [
  {
    href: 'https://globallyconnect.tjlink.me/',
    imgSrc: './Globe.png',
    alt: 'Featured Image',
    title: 'Globally Connected',
    date: null,
    isFeatured: true,
  },
  {
    href: 'https://example.com/item1',
    imgSrc: 'https://via.placeholder.com/450x250',
    alt: 'Item 1',
    title: 'Card Title 1',
    date: 'August 7, 2025',
    isFeatured: false,
  },
  {
    href: 'https://example.com/item2',
    imgSrc: 'https://via.placeholder.com/450x250',
    alt: 'Item 2',
    title: 'Card Title 2',
    date: 'August 6, 2025',
    isFeatured: false,
  },
  {
    href: 'https://example.com/item3',
    imgSrc: 'https://via.placeholder.com/450x250',
    alt: 'Item 3',
    title: 'Card Title 3',
    date: 'August 5, 2025',
    isFeatured: false,
  },
  {
    href: 'https://example.com/item4',
    imgSrc: 'https://via.placeholder.com/450x250',
    alt: 'Item 4',
    title: 'Card Title 4',
    date: 'August 4, 2025',
    isFeatured: false,
  },
];
---

<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>

<main>
			<h1 style="text-align: center;">Welcome</h1>
  <ul>
    {items.map(({ href, imgSrc, alt, title, date, isFeatured }) => (
      <li class={isFeatured ? 'featured' : ''}>
        <a href={href}>
          <img src={imgSrc} alt={alt} />
          {isFeatured ? (
            <h2 class="title">{title}</h2>
          ) : (
            <>
              <h4 class="title">{title}</h4>
              {date && <p class="date">{date}</p>}
            </>
          )}
        </a>
      </li>
    ))}
  </ul>
</main>
		<Footer />
	</body>
</html>
